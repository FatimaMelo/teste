@model IEnumerable<ProjetoFatima.Models.Produto>

@{
    ViewData["Title"] = "Controle de Produtos";
}

<center><h1>Controle de Produtos</h1></center>

<p>
    <a asp-action="Create"><input type="submit" value="Cadastrar Produto" class="btn btn-primary" /></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"><input type="submit" value="Atualizar" class="btn btn-primary" /></a> |
                <a asp-action="Delete" asp-route-id="@item.Id"><input type="submit" value="Excluir" class="btn btn-primary" /></a>
                <a asp-action="Details" asp-route-id="@item.Id"><input type="submit" value="Informações" class="btn btn-primary" /></a> |
            </td>
        </tr>
}
    </tbody>
</table>
