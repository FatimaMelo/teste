@model ProjetoFatima.Models.Produto

@{
    ViewData["Title"] = "Informações";
}

<center><h1>Informações</h1></center>

<div>
    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>
     <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id"><input type="submit" value="Atualizar" class="btn btn-primary" /></a> |
    <a asp-action="Index"><input type="submit" value="Voltar" class="btn btn-primary" /></a>
</div>
